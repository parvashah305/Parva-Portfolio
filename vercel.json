{
    "version": 2,
    "builds": [
      {
        "src": "frontend/my-project/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/my-project/dist"
        }
      },
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/index.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/my-project/dist/index.html",
        "status": 200
      }
    ]
  }